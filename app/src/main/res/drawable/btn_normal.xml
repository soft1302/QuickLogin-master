<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> <!-- pressed -->
        <shape>
            <solid android:color="@color/bt_select_0" />
            <corners android:radius="@dimen/bt_corner_0" />
        </shape>
    </item>

    <item android:state_focused="true"> <!-- focused -->
        <shape>
            <solid android:color="@color/bt_select_0" />
            <corners android:radius="@dimen/bt_corner_0" />
        </shape>
    </item>

    <item>  <!-- default -->
        <shape>
            <solid android:color="@color/bt_hint_0" />
            <corners android:radius="@dimen/bt_corner_0" />
        </shape>
    </item>
</selector>